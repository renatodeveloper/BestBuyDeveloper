<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.developer.bestbuy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/buy"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".application.ui.activities.ViewSplash"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".application.ui.activities.Home"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".application.ui.activities.ViewLogin"/>
        <activity android:name=".application.ui.activities.ViewDetalhes"/>
        <activity android:name=".application.ui.activities.ViewCesta"/>
    </application>

</manifest>